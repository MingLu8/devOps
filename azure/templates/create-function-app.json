{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "apiProfile": "2018-06-01-profile",
    "parameters": {
        "templateBaseUrl": {
            "type": "string"
        },
        "functionPackageUri": {
            "type": "string"
        },
        "keyVaultName": {
            "type": "string"
        },
        "appSettings": {
            "type": "object",
            "defaultValue": {
            }
        },
        "userAppSettings": {
            "type": "object",
            "defaultValue": {
            }
        },
        "functionAppName": {
            "type": "string",
            "defaultValue": "[concat('func-app-', uniqueString(resourceGroup().name))]",
            "metadata": {
                "description": "The name of the function app that you wish to create."
            }
        },
        "StorageAccountName": {
            "type": "string",
            "defaultValue": "[concat('stgfuncapp', uniqueString(resourceGroup().name))]"
        },

        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "tenantId": {
            "type": "string",
            "defaultValue": "[subscription().tenantId]"
        },
        "secretsPermissions": {
            "type": "array",
            "defaultValue": [
                "Get",
                "List",
                "Set"
            ],
            "metadata": {
                "description": "Specifies the permissions to secrets in the vault. Valid values are: all, get, list, set, delete, backup, restore, recover, and purge."
            }
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS"
            ],
            "metadata": {
                "description": "Storage Account type"
            }
        }
    },
    "variables": {
        "addSecretTemplatelink": "[concat(parameters('templateBaseUrl'), 'add-secret-to-key-vault.json')]",
        "addFunctionAppHostTemplateLink": "[concat(parameters('templateBaseUrl'), 'create-function-app-host.json')]",
        "addKeyVaultSecretAccessPolicyTemplatelink": "[concat(parameters('templateBaseUrl'), 'add-key-vault-access-policy.json')]",
        "storageAccountid": "[concat(resourceGroup().id,'/providers/','Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]",
        "addFunction": "addFunction"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('storageAccountName')]",
            "apiVersion": "2019-04-01",
            "location": "[parameters('location')]",
            "kind": "StorageV2",
            "identity": {
                "type": "SystemAssigned"
            },
            "sku": {
                "name": "[parameters('storageAccountType')]"
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[variables('addFunction')]",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
                "[parameters('storageAccountName')]"
            ],
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[variables('addFunctionAppHostTemplateLink')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "functionAppName": {
                        "value": "[parameters('functionAppName')]"
                    },
                    "userAppSettings": {
                        "value": "[union(parameters('appSettings'), parameters('userAppSettings'))]"
                    },
                    "appSettings": {
                        "value": {
                            "AzureWebJobsStorage": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2019-06-01').keys[0].value)]",
                            "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2019-06-01').keys[0].value)]"
                        }
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "addSecretAccessPolicy",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
                "[variables('addFunction')]"
            ],
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[variables('addKeyVaultSecretAccessPolicyTemplatelink')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "tenantId": {
                        "value": "[parameters('tenantId')]"
                    },
                    "objectId": {
                        "value": "[reference(variables('addFunction')).outputs.functionPrincipleId.value]"
                    },
                    "keyVaultName": {
                        "value": "[parameters('keyVaultName')]"
                    },
                    "secretsPermissions": {
                        "value": "[parameters('secretsPermissions')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "addSecretFunctionDefaultKey",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
                "[variables('addFunction')]"
            ],
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[variables('addSecretTemplatelink')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "keyVaultName": {
                        "value": "[parameters('keyVaultName')]"
                    },
                    "secretName": {
                        "value": "[concat('funcKey', parameters('functionAppName'))]"
                    },
                    "secretValue": {
                        "value": "[reference(variables('addFunction')).outputs.functionDefaultKey.value]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('functionAppName'), '/MSDeploy')]",
            "type": "Microsoft.Web/sites/extensions",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-08-01",
            "dependsOn": [
                "addSecretFunctionDefaultKey"
            ],
            "properties": {
                "packageUri": "[concat(parameters('functionPackageUri'))]"
            }
        }
    ]
}